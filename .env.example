# ===========================================
# Hospital Management System - Docker Config
# ===========================================
# Copy this file to .env and update values for your environment
# All variables have sensible defaults, but security-related ones MUST be changed

# ===========================================
# IMAGE VERSIONS (Pin versions for production)
# ===========================================
POSTGRES_VERSION=15-alpine
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# ===========================================
# CONTAINER NAMES
# ===========================================
POSTGRES_CONTAINER_NAME=hms-postgres
BACKEND_CONTAINER_NAME=hms-backend
FRONTEND_CONTAINER_NAME=hospital-ui

# ===========================================
# PORT MAPPINGS
# ===========================================
POSTGRES_PORT=5444
APP_PORT=8000
FRONTEND_PORT=80

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=hms_db

# ===========================================
# HMS Backend Configuration
# ===========================================
# SECURITY: Generate random 32+ character strings for these keys
# Use: openssl rand -hex 32 or similar
JWT_SECRET_KEY=CHANGE_THIS_GENERATE_RANDOM_STRING_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
APP_ENV=production
LOG_LEVEL=INFO
LICENSE_ENCRYPTION_KEY=CHANGE_THIS_GENERATE_RANDOM_STRING_MIN_32_CHARS
MAX_FILE_SIZE_MB=5

# ===========================================
# Hospital UI Configuration
# ===========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_DOMAIN_URL=
NEXT_PUBLIC_BASE_PATH=

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_RETENTION_DAYS=30
