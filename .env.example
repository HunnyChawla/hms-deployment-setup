# ===========================================
# Hospital Management System - Docker Config
# ===========================================
# Copy this file to .env and update values

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=hms_db
POSTGRES_PORT=5444

# HMS Backend Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
APP_ENV=production
LOG_LEVEL=INFO
LICENSE_ENCRYPTION_KEY=your-encryption-key-minimum-32-characters-long
MAX_FILE_SIZE_MB=5
APP_PORT=8000

# Hospital UI Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_DOMAIN_URL=
NEXT_PUBLIC_BASE_PATH=
FRONTEND_PORT=80
